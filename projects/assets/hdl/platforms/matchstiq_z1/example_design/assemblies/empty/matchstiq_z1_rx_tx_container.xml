<HdlContainer platform="matchstiq_z1">
    <!-- TX connections -->
    <Connection interconnect="zynq" device="lime_dac" port="in"/>
    <!-- RX connections -->
    <Connection device="lime_adc" port="out" interconnect="zynq"/>
    <!-- I2C bus -->
    <device name="si5338"/>
    <device name="tmp100"/>
    <device name="pca9534"/>
    <device name="pca9535"/>
    <device name="matchstiq_z1_avr"/>
    <!-- lime_rx and lime_tx control the lime_spi device for configuring the lime -->
    <device name="lime_rx"/>
    <device name="lime_tx"/>
</HdlContainer>
