ALLINC += \
	$(CONTAINER_EXPORTS) \
	$(LIBRARY_EXPORTS) \
	$(DATA_TRANSPORT_EXPORTS) \
	$(DATA_TRANSFER_EXPORTS) \
	$(UTIL_EXPORTS) \
	$(LOGGER_EXPORTS) \
	$(OCPIOS_EXPORTS) \
	$(or $(OPENCL_EXPORTS),../include/CL) \
	$(RCC_EXPORTS)

ALLLIBS += \
	$(RCC_CONTAINER_LIBS) \
	$(CONTAINER_LIBS) \
	$(LIBRARY_LIBS) \
	$(DATA_TRANSPORT_LIBS) \
	$(TX_DRIVER_SUPPORT_LIBS) \
	$(DATA_TRANSFER_LIBS) \
	$(UTIL_LIBS) \
	$(LOGGER_LIBS) \
	$(OCPIOS_LIBS)

EXTRALIBOBJS += $(OCPI_OPENCL_LIB)
EXTRA_LDFLAGS=$(LD_ALLOW_UNDEFINED)

ifeq ($(OCPI_HAVE_OPENCL),1)
  # This redundancy can be removed when we always build dynamic libraries
  SHARED+=-Xlinker -rpath -Xlinker $(dir $(OCPI_OPENCL_LIB))
  SHARED_ALLOW_UNDEFINED+=-Xlinker -rpath -Xlinker $(dir $(OCPI_OPENCL_LIB))
  #ifeq ($(OCPI_TARGET_OS),linux)
  #SYSLIBS += $(dir $(OCPI_OPENCL_OBJS))/OpenCL
  #else
  BASICLIBS+=$(OCPI_OPENCL_OBJS)
else
  EXTRA_LDFLAGS=$(LD_ALLOW_UNDEFINED)
endif
$(eval $(ForceDynamic))
#SHARED=$(SHARED_ALLOW_UNDEFINED)
